include /usr/share/nano/*.nanorc

set multibuffer
set quickblank
set regexp
set tabsize 2

unbind ^K main
unbind ^U main
unbind ^W main

bind ^O insert main
bind ^S writeout main
bind ^W exit main
bind ^A help main

bind ^P prevword main
bind ^N nextword main
bind ^B firstline main
bind ^E lastline main
bind ^J gotoline main

bind ^Space mark main
bind ^X cut main
bind ^C copy main
bind ^V paste main

bind ^F whereis main
bind ^G findnext main
bind ^H replace main

bind ^Z undo main
bind ^Y redo main

bind M-Z suspend main